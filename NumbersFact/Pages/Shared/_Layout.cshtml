<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NumbersFact</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NumbersFact.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark  p-2 text-white d-flex w-100 h-100 p-3 mx-auto flex-column"  style="--bs-bg-opacity: .85">
<header class="mb-auto">
	

	<nav class="navbar navbar-expand-lg">

		<div class=" container-fluid ">

			<a class="navbar-brand text-white fw-bold " asp-area="" asp-page="/Index">NumbersFact</a>

			<button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
			        aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon "></span>
			</button>
			<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
				<ul class="navbar-nav flex-grow-1">
					<li class="nav-item">
						<a class="nav-link navbar-brand text-white fw-bold " asp-area="" asp-page="/FactType/DateFact">Date fact</a>
					</li>
					<li class="nav-item">
						<a class="nav-link navbar-brand text-white fw-bold " asp-area="" asp-page="/FactType/MathFact">Math fact</a>
					</li>
					<li class="nav-item">
						<a class="nav-link navbar-brand text-white fw-bold " asp-area="" asp-page="/FactType/RandomFact">Random fact</a>
					</li>
					<li class="nav-item">
						<a class="nav-link navbar-brand text-white fw-bold " asp-area="" asp-page="/FactType/TriviaFact">Trivia fact</a>
					</li>
					<li class="nav-item">
						<a class="nav-link navbar-brand text-white fw-bold " asp-area="" asp-page="/FactType/YearFact">Year fact</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - NumbersFact - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>