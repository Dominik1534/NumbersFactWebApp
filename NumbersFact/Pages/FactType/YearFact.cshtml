@page
@model NumbersFact.Pages.FactType.YearFactModel
@{
}
<form method="post" >
	
	<div class="px-4 py-5 my-5 text-center ">
	
		<h1 class="display-5 fw-bold">Year Fact</h1>
		<div class="col-lg-6 mx-auto ">
			<main class="px-3">

				@if (Model.Fact == null)
				{
					<p class="lead mb-4"> Please write year below and enjoy your year fact.</p>
				}
				else
				{
					<p class="lead mb-4">@Model.Fact </p>
				}
		
				<div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
					<div class="col-sm-6">
						<label for="Year" class="form-label">Year</label>
						<input type="number" asp-for="Number" class="form-control" id="Year" placeholder="Write the number" value="" required="">
						<div class="invalid-feedback">
							Valid first name is required.
						</div>
					</div>
				</div>
				<hr class=" opacity-50">
				<p class="lead">
				
					<button type="submit" value="Submit" class="btn btn-outline-secondary btn-lg px-4 text-white">Get Fact</button>
				</p>
			</main>
		</div>
	</div>
</form>