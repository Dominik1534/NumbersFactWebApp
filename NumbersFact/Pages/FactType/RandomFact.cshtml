@page
@model NumbersFact.Pages.RandomFactModel
@{
}

<form method="post" >
	
	<div class="px-4 py-5 my-5 text-center ">
	
		<h1 class="display-5 fw-bold">Random Fact</h1>
		<div class="col-lg-6 mx-auto ">
			<main class="px-3">

				@if (Model.Fact == null)
				{
					<p class="lead mb-4">Please fill parameters below and enjoy your random fact.</p>
				}
				else
				{
					<p class="lead mb-4">@Model.Fact </p>
				}
		
				<div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
					<div class="col-sm-6">
						<label for="Min" class="form-label">Min number</label>
						<input type="number" asp-for="Min" class="form-control" id="Min" placeholder="Write min number" value="" required="">
						<div class="invalid-feedback">
							Valid first name is required.
						</div>
					</div>
					<div class="col-sm-6">
						<label for="Max" class="form-label">Max number</label>
						<input type="number" asp-for="Max" class="form-control" id="Max" placeholder="Write max number" value="" required="">
						<div class="invalid-feedback">
							Valid first name is required.
						</div>
					</div>
				</div>
				<hr class=" opacity-50">
				<p class="lead">
					<button type="submit" value="Submit" class="btn btn-outline-secondary btn-lg px-4 text-white">Get Fact</button>
					<input type="hidden" asp-for="@Model.FactTranslated" value="@Model.FactTranslated" />
				</p>
				<p class="lead">
					<button type="submit" value="Submit" asp-page-handler="Translate" class="btn btn-outline-secondary btn-lg px-4 text-white">Translate Fact to PL</button>
				</p>
			</main>
		</div>
	</div>
</form>